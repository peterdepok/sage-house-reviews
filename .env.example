# Sage House Review Dashboard - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (set to false in production)
DEBUG=true

# ============================================================================
# DATABASE
# ============================================================================

# SQLite (default for development)
DATABASE_URL=sqlite:///./sage_house_reviews.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/sage_house_reviews

# ============================================================================
# GOOGLE BUSINESS PROFILE
# ============================================================================

# Google Places API key
# Get from: https://console.cloud.google.com/apis/credentials
# Enable: Places API
GOOGLE_PLACES_API_KEY=

# Place ID for Sage House
# Find at: https://developers.google.com/maps/documentation/places/web-service/place-id
GOOGLE_PLACE_ID=

# ============================================================================
# YELP
# ============================================================================

# Yelp Fusion API key
# Get from: https://www.yelp.com/developers/v3/manage_app
YELP_API_KEY=

# Yelp business ID or alias
# Example: sage-house-assisted-living-city
YELP_BUSINESS_ID=

# ============================================================================
# FACEBOOK
# ============================================================================

# Facebook Page Access Token
# Get from: https://developers.facebook.com/tools/explorer/
# Required permissions: pages_read_user_content, pages_read_engagement
FACEBOOK_ACCESS_TOKEN=

# Facebook Page ID
FACEBOOK_PAGE_ID=

# ============================================================================
# WEB SCRAPING SOURCES
# ============================================================================

# Full URL to Caring.com facility page
# Example: https://www.caring.com/senior-living/assisted-living/ca/city/sage-house-12345
CARING_COM_URL=

# Full URL to A Place for Mom facility page
# Example: https://www.aplaceformom.com/community/sage-house-12345
A_PLACE_FOR_MOM_URL=

# Full URL to SeniorAdvisor.com facility page
# Example: https://www.senioradvisor.com/local/sage-house-city-ca
SENIOR_ADVISOR_URL=

# ============================================================================
# MEDICARE (if applicable)
# ============================================================================

# Medicare CMS Certification Number (CCN) / Provider ID
# Only applicable if facility is Medicare certified
# Find at: https://www.medicare.gov/care-compare/
MEDICARE_PROVIDER_ID=

# ============================================================================
# SCHEDULER
# ============================================================================

# Enable/disable automatic review syncing
ENABLE_SCHEDULER=true

# Hours between automatic syncs (default: 6)
SYNC_INTERVAL_HOURS=6

# ============================================================================
# RATE LIMITING
# ============================================================================

# Maximum API requests per minute
RATE_LIMIT_REQUESTS_PER_MINUTE=30

# Delay between scraper requests (seconds)
SCRAPER_DELAY_SECONDS=2.0

# ============================================================================
# SENTIMENT ANALYSIS
# ============================================================================

# Analyzer to use: vader (default) or textblob
SENTIMENT_ANALYZER=vader

# ============================================================================
# NOTIFICATIONS (Phase 1 Stubs)
# ============================================================================

# SMTP settings for email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Email address to receive notifications
NOTIFICATION_EMAIL=

# Webhook URL for alert notifications (Slack, Discord, etc.)
WEBHOOK_URL=

# ============================================================================
# CORS SETTINGS
# ============================================================================

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# FRONTEND (for Vite)
# ============================================================================

# API URL for frontend proxy
VITE_API_URL=http://localhost:8000
